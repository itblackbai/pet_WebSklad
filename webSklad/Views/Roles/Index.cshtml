@{
    Layout = "_Layout";
}

@using webSklad.Models
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div style="text-align: center;">
    <div class="d-flex justify-content-center">
        <h4 class="mb-3 mt-3">Roles</h4>
    </div>

    <a class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" asp-controller="Settings" asp-action="EditUser">Edit my info</a>
    <a class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" asp-controller="Roles" asp-action="UserList">See all users</a>
    <a class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" asp-controller="Roles" asp-action="Create">Add new role</a>

</div>

@if (Model.Count() == 0)
{
    <h5 class="mb-3 mt-3">Now there are no roles in this app.</h5>
}
<hr>
<div class="table-editor" id="table_1" data-entries="2" data-entries-options="[5, 10, 15]">
    <table class="table">
        <thead>
            <tr>
                <th class="th-sm" data-width="950" data-sort="false">Role</th>
                <th class="th-sm" data-width="50" data-sort="false"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                         <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>